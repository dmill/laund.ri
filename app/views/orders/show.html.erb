<div>

  <div class="orderbuttons">
    <%= button_to "Delivered", { action: "update", id: @order.id, confirming: "delivered" }, method: :put, data: { confirm: "Are you sure?" }, remote: true, class: "btn btn-default btn-lg" %>
    <%= button_to "Out for Delivery", { action: "update", id: @order.id, confirming: "en_route" }, method: :put, data: { confirm: "Are you sure?" }, remote: true, class: "btn btn-default btn-lg" %>
  </div>


  <div class="orderinfo">
    <h3><%= @customer_attributes['Name'] %></h3>

    <table>
      <tr>
        <th colspan="2" class="highlight">Customer Information</th>
      </tr>
    <% @customer_attributes.each_pair do |name, value| %>
      <% if name != 'Preferences' %>
        <tr>
          <td><%= name %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    <% end %>
    </table>  


    <table>
      <tr>
        <th colspan="2" class="highlight">Order Status</th>
      </tr>
    <% @order_attributes.each_pair do |name, value| %>
      <% if name != 'Customer_ID' %>
        <tr>
          <td><%= name %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    <% end %>
    </table>
  </div>
</div>