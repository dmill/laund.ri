<div>

  <%= form_tag(order_path, remote: true, method: :put) do %>
  <%= button_tag 'delivered__c' %>
  <%= button_tag 'en_route__c' %>
  <%= submit_tag "Update" %>
  <% end %>

  <h3>Order For: <%= @customer_attributes['Name'] %></h3>

  <table>
    <tr>
      <th colspan="2">Customer Information</th>
    </tr>
  <% @customer_attributes.each_pair do |name, value| %>
    <% if name != 'Preferences' %>
      <tr>
        <td><%= name %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  <% end %>
  </table>  


  <table>
    <tr>
      <th colspan="2">Order Status</th>
    </tr>
  <% @order_attributes.each_pair do |name, value| %>
    <% if name != 'Customer_ID' %>
      <tr>
        <td><%= name %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  <% end %>
  </table>
</div>