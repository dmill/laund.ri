<div>

  <div>
    <%= form_tag(order_path, remote: true, method: :put) do %>
      <%= button_tag "Delivered", data: { delivered__c: true, confirm: "Are you sure? Upon confirmation, this is unable to be altered." } %>
      <%= button_tag "Out for Delivery", data: { en_route__c: true, confirm: "Are you sure? Upon confirmation, this is unable to be altered." } %>
    <% end %>
  </div>

  <%= button_to "Delivered", { action: "update", id: @order.id },
                                method: :put, data: { confirm: "Are you sure?", 'attribute' => "Delivered" }, remote: true %>

  <h3>Order For: <%= @customer_attributes['Name'] %></h3>

  <table>
    <tr>
      <th colspan="2">Customer Information</th>
    </tr>
  <% @customer_attributes.each_pair do |name, value| %>
    <% if name != 'Preferences' %>
      <tr>
        <td><%= name %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  <% end %>
  </table>  


  <table>
    <tr>
      <th colspan="2">Order Status</th>
    </tr>
  <% @order_attributes.each_pair do |name, value| %>
    <% if name != 'Customer_ID' %>
      <tr>
        <td><%= name %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  <% end %>
  </table>
</div>